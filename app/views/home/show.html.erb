<h1>Bienvenue </h1> <br>
<% @gossip.each do |gossip| %>
<% name = User.find_by id: gossip.user_id %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to "#{gossip.title}", my_gossip_path(gossip.id)%></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%=name.first_name%></h6>
    <p class="card-text"><%=gossip.content%></p>
  </div>
</div><br>

<% end %>


